<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    <record id="res_partner_templates" model="ir.ui.view">
        <field name="name">product.template.ebay.tree.my</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <group>
                    <field name="customer_rank" invisible="1"/>
                </group>
                <header>
                    <button string="Send Mail" name="action_email_template" type="object" class="oe_highlight" invisible="customer_rank==0"/>
                </header>
            </xpath>
        </field>
    </record>
    </data>
</odoo>